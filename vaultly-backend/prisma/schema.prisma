generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String         @id @default(uuid())
  full_name    String
  email        String         @unique
  role         String         @default("user")
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  passwordHash String

  // Relations
  Expenses     Expenses[]
  GroupMembers GroupMembers[]
  Groups       Groups[]
  Goals        Goals[]
}

model Groups {
  id           String         @id @default(uuid())
  name         String
  createdBy    String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // Relations
  Expenses     Expenses[]
  GroupMembers GroupMembers[]
  Users        Users          @relation(fields: [createdBy], references: [id])
}

model Categories {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  Expenses  Expenses[]
}

model Expenses {
  id          String     @id @default(uuid())
  userId      String
  groupId     String?
  categoryId  String
  amount      Float
  description String
  date        DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  Categories  Categories @relation(fields: [categoryId], references: [id])
  Groups      Groups?     @relation(fields: [groupId], references: [id])
  Users       Users      @relation(fields: [userId], references: [id])
}

model GroupMembers {
  id       String   @id @default(uuid())
  groupId  String
  userId   String
  role     String
  joinedAt DateTime @default(now())

  // Relations
  Groups   Groups   @relation(fields: [groupId], references: [id])
  Users    Users    @relation(fields: [userId], references: [id])


  // Constraints
  @@unique([groupId, userId])
}

model Goals {
  id              String   @id @default(uuid())
  userId          String
  name            String
  targetAmount    Float
  currentAmount   Float    @default(0)
  deadline        DateTime?
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  Users           Users    @relation(fields: [userId], references: [id])
}
